<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kale.adminninebala">
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ActivityAdmin.LoginOption"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityAdmin.Broadcast" />
        <activity android:name=".ActivityAdmin.DetailBroadcast" />
        <activity
            android:name=".ActivityAdmin.BerandaAdmin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityAdmin.CreateGroup" />
        <activity android:name=".ActivityAdmin.AddManager" />
        <activity android:name=".ActivityAdmin.ManageGroup" />
        <activity android:name=".ActivityAdmin.ManageManager" />
        <activity android:name=".ActivityAdmin.LoginAdmin" />
        <activity
            android:name=".ActivityManager.BerandaManager"
            android:label="@string/title_activity_beranda_manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityManager.LoginManager" />
        <activity
            android:name=".ActivityManager.DetailGroup"
            android:label="@string/title_activity_detail_group"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityManager.AddContentGroup" />
        <activity android:name=".ActivityManager.CalendarContent" />
        <activity android:name=".ActivityAdmin.ContentUser" />
        <activity android:name=".ActivityAdmin.AddZipcode" />
        <activity android:name=".ActivityAdmin.BroadcastChoice"/>
    </application>

</manifest>