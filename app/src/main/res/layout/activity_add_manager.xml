<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kale.adminninebala.ActivityAdmin.AddManager">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manager Name"
                android:layout_marginRight="5dp"
                android:textColor="@color/blue"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/blue"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/etManagername"
            android:padding="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyleabuabu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_marginRight="5dp"
                android:textColor="@color/blue"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/blue"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/etUsername"
            android:padding="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyleabuabu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password"
                android:layout_marginRight="5dp"
                android:textColor="@color/blue"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/blue"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/etPassword"
            android:layout_marginTop="5dp"
            android:padding="12dp"
            android:background="@drawable/edittextstyleabuabu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="group"
                android:layout_marginRight="5dp"
                android:textColor="@color/blue"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/blue"/>
        </LinearLayout>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spGroup"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bAddmanager"
                android:textColor="@color/white"
                android:text="Add"
                android:padding="20dp"
                android:backgroundTint="@color/blue"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
